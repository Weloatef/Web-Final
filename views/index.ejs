<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="/css/index.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <h2>Login</h2>
                    <form id="loginForm" method="POST" action="/api/login">
                        <div class="form-group">
                            <label for="username">Username:</label>
                            <input type="text" id="username" name="username" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="password" required>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" onclick="logIn()">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function logIn() {
            var loginDate = new Date().toISOString().slice(0, 19).replace('T', ' ');
            var username = document.getElementById('username').value;

            $.ajax({
                url: '/api/addlogintime',
                method: 'POST',
                data: { username: username, logindate: loginDate },
                success: function(response) {
                    console.log('Login date saved successfully!');
                },
                error: function(error) {
                    console.error('Error saving login date:', error);
                }
            });
        }
    </script>
</html>
